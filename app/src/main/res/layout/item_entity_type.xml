<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundDark"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Example: entity type name or ID -->
        <TextView
            android:id="@+id/tvEntityTypeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccentCyan"
            android:padding="4dp" />

        <!-- Optional: Additional details, like a property count, or description -->
        <TextView
            android:id="@+id/tvEntityTypeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="italic"
            android:textColor="@color/colorOnSurfaceDark"
            android:padding="4dp"
            android:text="Properties: 5" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
